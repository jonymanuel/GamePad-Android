    <!--
    * ImageView voor Flop, Turn en River.
    * Dit zijn de 5 kaarten die altijd open op tafel komen.
    * Deze worden via de code gebruikt, hieronder zijn alleen de posities gedeclareerd.
    -->

    <ImageView
        android:id="@+id/flop1"
        android:layout_width="80dp"
        android:layout_height="119dp"
        android:src="@drawable/aa"
        android:layout_marginTop="169dp"
        android:layout_marginLeft="218dp"
        />
