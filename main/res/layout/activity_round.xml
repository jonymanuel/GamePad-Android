        android:id="@+id/turn"
        android:layout_width="80dp"
        android:layout_height="119dp"
        android:src="@drawable/aa"
        android:layout_marginTop="169dp"
        android:layout_marginLeft="552dp"
        />
    <ImageView
        android:id="@+id/river"
        android:layout_width="80dp"
        android:layout_height="119dp"
        android:src="@drawable/aa"
        android:layout_marginTop="169dp"
        android:layout_marginLeft="660dp"
        />

